@model ContactDetails
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ContactManager - Contact Details</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <nav>
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Home">
                    <div>Home</div>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Privacy" asp-controller="Home">
                    <div>Privacy</div>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Login" asp-controller="Auth">
                    <div>Login</div>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Register" asp-controller="Auth">
                    <div>Register</div>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Contact">
                    <div>Contact list</div>
                </a>
            </li>
        </ul>
    </nav>
    <div class="container">
        <h3>@Model.LastName.ToUpper(), @Model.FirstName @((Model.CategoryId==1)?"💼":"")</h3>
        <dl>
            @if(Model.Phone !=null){
                <dt>@Html.DisplayNameFor(model=>model.Phone)</dt>
                <dd><a href="tel:@Model.Phone">@Html.DisplayFor(model=>model.Phone)</a></dd>
            }
            @if(Model.Email !=null){
            <dt>@Html.DisplayNameFor(model=>model.Email)</dt>
            <dd><a href="mailto:@Model.Email">@Html.DisplayFor(model=>model.Email)</a></dd>
            }
            @if(Model.BirthDate !=null){
                <dt>@Html.DisplayNameFor(model=>model.BirthDate)</dt>
                <dd>@Html.DisplayFor(model=>model.BirthDate)<br>(anniversaire dans @Model.DaysUntilBirthDay jours)</dd>
            }
        </dl>
    </div>
</body>
</html>